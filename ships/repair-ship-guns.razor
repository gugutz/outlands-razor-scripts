# check if char has ship repair kit in backpack
if not findtype 25758 backpack
    overhead 'no ship repair tool' 41
    sysmsg '>>> No Ship Repair Tool!' 41
    stop
endif

setvar! action_delay 600
createtimer 'waiting_sysmsg'

say '[repairguns'

clearsysmsg
settimer 'waiting_sysmsg' 0
while timer 'waiting_sysmsg' < action_delay
    if insysmsg 'guns do not need to be repaired'
        overhead 'guns dont need reparing!' 54
        stop
    endif
endwhile

overhead 'reparing ship sails...' 54
