createlist 'BuyList'
clearlist 'BuyList'

unsetvar 'Vendor'
setvar 'Vendor'


dclick Vendor
wait 1000
foreach rare in rares
    while findtype rare Vendor any any any as found
        getlabel found label
        foreach word in words
            if word in label
                pushlist 'BuyList' found
            endif
        endfor
        ignore found
    endwhile
endfor
foreach container in ContainerTypes
    while findtype container Vendor any any any as cont
        dclick cont
        wait 1000
        foreach rare in rares
            while findtype rare cont any any any as found
                getlabel found label
                foreach word in words
                    if word in label
                        pushlist 'BuyList' found
                    endif
                endfor
                ignore found
            endwhile
        endfor
        ignore cont
    endwhile
endfor

if list 'BuyList' > 0
    foreach item in BuyList
        menu item 0
        while gumpexists any
            wait 1000
        endwhile
    endfor
endif
