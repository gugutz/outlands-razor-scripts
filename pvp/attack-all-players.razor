
setvar! action_delay 200

createlist 'attacked_serials'
clearlist 'attacked_serials'

hotkey "Next Player Target"

while not dead self and not dead lasttarget
    if dead lasttarget
        overhead 'DEAD' 54 lasttarget
    endif

    if not dead lasttarget
        overhead 'ATTACKING' 52 lasttarget
        attack last
        pushlist 'attacked_serials' lasttarget
    endif

    hotkey "Next Enemy Player Target"

    wait action_delay
endwhile
