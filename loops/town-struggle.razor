sysmsg '#########################' 90
sysmsg 'Survival Loop' 55
sysmsg 'by gugutz' 45
sysmsg 'version 0.0.1' 31
sysmsg '########################' 90

overhead '!survival loop on!' 60

if not timerexists 'loop_on_msg_timer'
    createtimer 'loop_on_msg_timer'
    settimer 'loop_on_msg_timer' 10001
endif


while dead 'self' or not dead 'self'
    if timer 'loop_on_msg_timer' >=  10000
        sysmsg '########################' 90
        sysmsg 'Survival Loop ON...' 45
        sysmsg '#######################' 90
        settimer 'loop_on_msg_timer' 0

    endif

    if poisoned
        hotkey "Drink Cure"

    elseif hp < maxhp
        hotkey "Drink Heal"

    elseif stam < maxstam
        hotkey "Drink Refresh"
    endif

endwhile
