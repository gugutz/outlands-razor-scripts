setvar! action_delay 600
setvar! spell_recovery_delay 200

while not targetexists 'neutral'
    clearsysmsg
    say '[vampiricembrace'
    wft action_delay
endwhile

if targetexists 'neutral'
    overhead 'CONSUME WHICH CORPSE?' 90
    while targetexists 'neutral'
        wait 100
    endwhile

    wait spell_recovery_delay

    if insysmsg 'Target cannot be seen'
        sysmsg 'TARGET WASTED! REPLAYING PAIN SPIKE' 37
        replay
    endif

    if insysmsg 'symbols remaining'
        sysmsg 'CONSUMED CORPSE!' 90
        cooldown 'VAMPIRIC EMBRACE' 30000
    endif
endif
