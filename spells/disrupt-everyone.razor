setvar! spell_recovery_delay 200

createlist 'disrupted_serials'
clearlist 'disrupted_serials'

while not dead self
    hotkey "Next Enemy Player Target"
    if dead lasttarget
        overhead '*no target found to disrupt*'
        stop
    endif

    if not dead lasttarget
        cast 'weaken'
        wft 1500
        target lasttarget
        pushlist 'disrupted_serials' lasttarget
    endif
    wait spell_recovery_delay
endwhile
