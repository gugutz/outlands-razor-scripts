wait detect_delay
useskill 'detectinghidden'
wft 600
target 'self'
wait object_delay

if insysmsg 'you reveal what was hidden.'
    overhead '>>>>> ATENÇÃO LADRAO NA GH <<<<<'
    sysmsg ">>>>> ATENÇÃO LADRAO NA GH <<<<<"
