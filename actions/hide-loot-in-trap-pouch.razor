    sysmsg 'DEBUG 1' 67
    setvar! redefine_char_loot_pouch 1
elseif varexist char_loot_pouch and not find char_loot_pouch backpack
    sysmsg 'DEBUG 2' 67
    setvar! redefine_char_loot_pouch 1
endif

if varexist redefine_char_loot_pouch
    unsetvar! redefine_char_loot_pouch
    unsetvar! char_loot_pouch
    setvar! redefine_char_loot_pouch 1

    if not listexists 'trapped_pouches'
        createlist 'trapped_pouches'
    endif
    clearlist 'trapped_pouches'

    # if not findtypelist 'trapped_pouches' 'pouch' loadout_bag 38
    # changed back to backpack instead of loadout pouch cause script would miss pouches inside backpack if they werent inside the loadout bag
    if not findtypelist 'trapped_pouches' 'pouch' backpack 38
        overhead '*no trap pouches found*' 39
        stop
    endif

    overhead '*redefining loot pouch*' 54
    sysmsg 'REDEFINING CHAR LOOT POUCH...' 54

    if varexist loadout_bag

        # first get all the traped pouches char has in backpack
        @clearignore

        if findtypelist 'trapped_pouches' 'pouch' backpack 38
        endif

        if list 'trapped_pouches' == 0
        else
            # @clearignore

            foreach pouch_serial in 'trapped_pouches'
                getlabel pouch_serial pouch_label

                # go through each traped pouch to see if any of them already has itens in it
                if '0 items' in pouch_label
                else
                    overhead 'found pouch with items!' 70
                    sysmsg 'Found Pouch With Items {{pouch_serial}}. Assuming Its Char Loot Pouch' 70
                    setvar! char_loot_pouch pouch_serial

                    # WE IGNORE IT HERE JUST TO BE ABLEW TO PUT ALL OTHER ON TOP OF IT
                    # THEN WE CLEAR IGNOE LIST (DOWN BELLOW)
                    # @ignore pouch_serial
                    break
                endif

                # if we get here and still didnt define a pouch, its probably because they are still all empty
                # might be first execution of the script, so we need to pick an empty one anyways
                if not varexist char_loot_pouch and counttype 'pouch' 38 == index
                    sysmsg 'Scanned all pouches and couldnt find loot pouch. Using {{index}}th Pouch Scanned...' 52
                    setvar! char_loot_pouch pouch_serial
                    # @ignore pouch_serial
                    break
                endif
            endfor
        endif
    endif
endif

