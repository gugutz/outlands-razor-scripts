####################################
# RETRAP ALL SAVED POUCHES IF ANY IS NOT TRAPPED
####################################

if not listexists 'all_pouches'
    createlist 'all_pouches'
endif
clearlist 'all_pouches'

if list 'all_pouches' = 0
    if findtypelist 'all_pouches' 'pouch' backpack
        # overhead 'found bags' 71
    endif
endif

if list 'all_pouches' > 0
    unsetvar! retrapped_pouches
    foreach saved_pouch in 'all_pouches'
        if hue saved_pouch == 0
            overhead '*re-trapping pouch {{saved_pouch}}' 53

            # first try to use scrolls
            if findtype 0x1F39 as magic_trap_scroll
                useobject magic_trap_scroll
                wft 1800
                if targetexists 'neutral'
                    target saved_pouch
                endif
                wait spell_recovery_delay
            # if there are no scrolls in backpack, try with magery if char has the skill
            elseif skill 'magery' > 50
                cast 'magic trap'
                wft 1800
                if targetexists 'neutral'
                    target saved_pouch
                endif
                wait spell_recovery_delay
            else
                overhead '*no ways to trap pouch*' 48 'self'
            endif

            # flag to re-organize pouches
            setvar! retrapped_pouches 1

        endif
    endfor

    if varexist retrapped_pouches
        unsetvar! pouches_organized
    endif
endif


####################################
# RE-DEFINE LOOT TRAP POUCH WHEN NEEDED
####################################

unsetvar! redefine_char_loot_pouch

