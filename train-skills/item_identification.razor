wft 650
while targetexists 'neutral'
    wait 20
endwhile

while not dead self
    if skill 'itemidentification' < 85
        skill 'itemidentification'
        waitfortarget 600
        target item_to_id
        pause 1000
    elseif skill 'itemidentification' < 100
        skill 'itemidentification'
    waitfortarget 600
        target item_to_id
        pause 1000
    else
        sysmsg 'You have reached skill level 100 in Item Identification' 44
        stop
    endif
endwhile
    