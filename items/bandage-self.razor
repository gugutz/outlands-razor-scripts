// bandage type 0xe21

if not timerexists "bandagetimer"
    createtimer "bandagetimer"
    settimer "bandagetimer" 11000
endif

if hp < maxhp
    if findtype "clean bandage%s%" backpack
        if timer "bandagetimer" >= 11000
            dclicktype "clean bandage%s%" backpack
            waitfortarget 300
            hotkey "Target Self"
            waitforsysmsg 'begin applying' 200
            wait 10
            if insysmsg "begin applying"
                overhead '*applying bandages*'
                settimer "bandagetimer" 0
            endif
        else
            overhead "already applying..." 88
        endif
    else
        overhead "*no bandages*" 40
    endif
else
    overhead "*full hp*"
endif
