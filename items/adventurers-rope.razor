if not targetexists 'neutral'
    if findtype 'rope' backpack 2799 as adv_rop
        useobject adv_rop
        waitfortarget 300
        if targetexist 'neutral'
            overhead 'adventurers rope!' 64
            while targetexist 'neutral'
                wait 100
            endwhile
        endif
    else
        overhead 'no adventurers rope!'
        stop
    endif
else
    if findtype 'blue moongate' ground 2822 any 20 as field
        overhead '*targetting player gate*' 56
        target field
    # public moongates?
    elseif findtype 'blue moongate' ground 2820 any 20 as field
        overhead '*targetting public gate*' 56
        target field
    else
        overhead 'no moongates nearby' 43
    endif
endif
